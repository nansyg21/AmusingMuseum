<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/royal_blue"
    android:layout_weight="0.5"
    >


    <ImageView
        android:id="@+id/titleImageViewExInfo"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
       />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="250dp"
            android:id="@+id/imageview_exhibit_info"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:scaleType="fitXY"
            />

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Texttdsaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
                android:id="@+id/textViewExhibitInfo"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textSize="@dimen/museum_title_size"
                android:textStyle="bold"
                android:textColor="@android:color/white" />

            <ImageView
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:id="@+id/backButtonExhibitInfo"
                android:src="@drawable/back_button_icon"
                android:layout_gravity="top|bottom|center_horizontal|right"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/incorrectObjectCode"
                android:minLines="2"
                android:textSize="20dp"
                android:gravity="center_horizontal"
                android:textColor="@android:color/holo_red_dark"
                android:textStyle="bold"
                android:id="@+id/textViewIncorrectObjectCode"
                android:layout_toLeftOf="@+id/backButtonExhibitInfo"
                android:layout_alignParentBottom="true"
                android:visibility="gone"
                />
        </RelativeLayout>


    </LinearLayout>

</LinearLayout>