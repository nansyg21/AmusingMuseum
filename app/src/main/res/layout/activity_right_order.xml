<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@color/neutral_beize" tools:context=".RightOrder">

   <TableLayout
       android:id="@+id/mainTableLayout"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_weight="1"
       android:stretchColumns="*">
       <TableRow
           android:id="@+id/tableRowTimer"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"

           >

           <TextView
               android:id="@+id/timerTextView"
               android:layout_width="match_parent"
               android:textAlignment="center"
               android:layout_span="4"
               android:layout_gravity="center"
               android:gravity="center"
               android:textColor="@color/royal_crimson"
               android:textSize="@dimen/right_order_time_size"
               android:text="time"/>

       </TableRow>

       <TableRow
           android:id="@+id/tableRowNames"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_weight="1"

           >

          <TextView
              android:id="@+id/textView1"
              android:layout_width="0dp"
              android:text="fist"
              android:textAlignment="center"
              android:layout_gravity="center"
              android:textSize="@dimen/right_order_name_size"
              android:textColor="@color/royal_blue"
              />

           <TextView
               android:id="@+id/textView2"
               android:layout_width="0dp"
               android:text="second"
               android:textAlignment="center"
               android:layout_gravity="center"
               android:textSize="@dimen/right_order_name_size"
               android:textColor="@color/royal_blue"
               />

           <TextView
               android:id="@+id/textView3"
               android:layout_width="0dp"
               android:text="third"
               android:textAlignment="center"
               android:layout_gravity="center"
               android:textSize="@dimen/right_order_name_size"
               android:textColor="@color/royal_blue"
               />

           <TextView
               android:id="@+id/textView4"
               android:layout_width="0dp"
               android:text="forth"
               android:textAlignment="center"
               android:layout_gravity="center"
               android:textSize="@dimen/right_order_name_size"
               android:textColor="@color/royal_blue"
               />

       </TableRow>

       <TableRow
           android:id="@+id/tableRowImages"
           android:layout_width="match_parent"
           android:layout_height="match_parent"

           >

           <ImageView
               android:id="@+id/imageView1"
               android:layout_height="match_parent"
               android:adjustViewBounds="false"
               android:scaleType="fitXY"
               android:layout_gravity="center_horizontal"/>

           <ImageView
               android:id="@+id/imageView2"
               android:layout_height="match_parent"
               android:adjustViewBounds="false"
               android:scaleType="fitXY"
               android:layout_gravity="center_horizontal"/>

           <ImageView
               android:id="@+id/imageView3"
               android:layout_height="match_parent"
               android:adjustViewBounds="false"
               android:scaleType="fitXY"
               android:layout_gravity="center_horizontal"/>

           <ImageView
               android:id="@+id/imageView4"
               android:layout_height="match_parent"
               android:adjustViewBounds="false"
               android:scaleType="fitXY"
               android:layout_gravity="center_horizontal"/>

       </TableRow>

   </TableLayout>

</FrameLayout>
