                        android:onClick="onTouch"/>
                    <ImageView
                        android:id="@+id/wire21"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:onClick="onTouch"/>
                    <ImageView
                        android:id="@+id/wire22"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:onClick="onTouch"/>
                    <ImageView
                        android:id="@+id/wire23"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:onClick="onTouch"/>
                    <ImageView
                        android:id="@+id/wire24"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:onClick="onTouch"/>
                </TableRow>
            </TableLayout>


        </TableRow>

    </TableLayout>

</FrameLayout>
