<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    tools:context="com.example.nasiadesktop.wires.wires">

    <TableLayout
        android:id="@+id/mainTable"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="*">
        <TableRow
            android:id="@+id/menuRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end">

            <TextView
                android:id="@+id/numOfClicks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"/>

            <ImageView
                android:id="@+id/pauseBtImageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/menu_icon"
                android:onClick="menuBtClick"
                android:layout_gravity="end"
                />



        </TableRow>
        <TableRow
            android:id="@+id/mainRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageToLight"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:adjustViewBounds="false"
                android:scaleType="matrix"
                />
            <TableLayout
                android:id="@+id/wireTableLayout"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="2">
                <TableRow
                    android:id="@+id/firstWireRow">
                    <ImageView
                        android:id="@+id/wire0"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:onClick="onTouch"/>
                    <ImageView
                        android:id="@+id/wire1"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:onClick="onTouch"/>
                    <ImageView
                        android:id="@+id/wire2"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:onClick="onTouch"/>
                    <ImageView
                        android:id="@+id/wire3"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:onClick="onTouch"/>
                    <ImageView
                        android:id="@+id/wire4"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:onClick="onTouch"/>
                </TableRow>
                <TableRow
                    android:id="@+id/secondWireRow">
                    <ImageView
                        android:id="@+id/wire5"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:onClick="onTouch"/>
                    <ImageView
                        android:id="@+id/wire6"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:onClick="onTouch"/>
                    <ImageView
                        android:id="@+id/wire7"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:onClick="onTouch"/>
                    <ImageView
                        android:id="@+id/wire8"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:onClick="onTouch"/>
                    <ImageView
                        android:id="@+id/wire9"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:onClick="onTouch"/>
                </TableRow>
                <TableRow
                    android:id="@+id/thirdWireRow">
                    <ImageView
                        android:id="@+id/wire10"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:onClick="onTouch"/>
                    <ImageView
                        android:id="@+id/wire11"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:onClick="onTouch"/>
                    <ImageView
                        android:id="@+id/wire12"
                        android:layout_height="wrap_content"
